{
  "author": "Philip Wilcox",
  "name": "spotify-butler",
  "description": "Basic playlist curation",
  "version": "0.0.2",
  "type": "module",
  "engines": {
    "node": "24.12.0"
  },
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "cerialize": "^0.1.18",
    "node-fetch": "^3.2.10",
    "tiny-async-pool": "^2.1.0"
  },
  "scripts": {
